<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titles_bar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:theme="@style/TitleTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_margin="@dimen/five_margin"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_menu_green_money" />

        <TextView
            android:id="@+id/titles_bar_subtitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_margin="@dimen/five_margin"
            android:layout_weight="0.5"
            android:theme="@style/SubTitleTextView" />

        <Switch
            android:id="@+id/title_switch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_margin="@dimen/five_margin"
            android:layout_weight="1"
            android:theme="@style/CustomSwitch"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SearchView
            android:id="@+id/title_search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_margin"
            android:iconifiedByDefault="false"
            android:queryHint="@string/search_view_hint_message" />
    </LinearLayout>

</LinearLayout>